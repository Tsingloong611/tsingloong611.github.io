---
import links from 'public/links.json'
import config from 'virtual:config'

import { Comment } from 'astro-pure/advanced'
import { Collapse, Icon, Timeline } from 'astro-pure/user'
import PageLayout from '@/layouts/CommonPage.astro'
import FriendList from '@/components/links/FriendList.astro'

const headings = [
  { depth: 2, slug: 'friends', text: 'Friends' },
  { depth: 2, slug: 'how-to-apply', text: 'How to Apply' },
  { depth: 2, slug: 'archives', text: 'Archives' },
]

const { friends } = links
const linksConf = config.integ.links
---

<PageLayout title='Links' {headings}>
  <div class="mx-auto max-w-6xl font-mono">

    <!-- Terminal Header -->
    <section class="mb-12">
      <div class="bg-slate-900 dark:bg-black border border-slate-700 dark:border-green-500/30 rounded-lg overflow-hidden shadow-2xl">
        <!-- Terminal Title Bar -->
        <div class="bg-slate-800 dark:bg-green-950/20 px-4 py-3 flex items-center justify-between border-b border-slate-700 dark:border-green-500/30">
          <div class="flex items-center gap-2">
            <div class="w-3 h-3 bg-red-500 rounded-full"></div>
            <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
            <div class="w-3 h-3 bg-green-500 rounded-full"></div>
          </div>
          <span class="text-slate-400 dark:text-green-400 text-sm">links.sh - Terminal</span>
          <div class="w-16"></div>
        </div>
        
        <!-- Terminal Content -->
        <div class="p-6 text-green-400 dark:text-green-300">
          <div class="mb-4">
            <span class="text-slate-500 dark:text-green-600">guest@tsingloong.xyz</span>
            <span class="text-slate-400 dark:text-green-500">:</span>
            <span class="text-blue-400 dark:text-cyan-300">~/links</span>
            <span class="text-slate-400 dark:text-green-500">$</span>
            <span class="ml-2 text-white dark:text-green-100">cat status.log</span>
          </div>
          
          <div class="mb-4 text-sm space-y-1">
            <div class="flex items-center gap-4">
              <span class="text-slate-500 dark:text-green-600">[INFO]</span>
              <span class="text-slate-400 dark:text-green-400">XXX views</span>
              <span class="text-slate-600 dark:text-green-600">|</span>
              <span class="text-slate-400 dark:text-green-400">XXX comments</span>
              <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse ml-2"></span>
            </div>
            <div class="flex items-center gap-2">
              <span class="text-slate-500 dark:text-green-600">[STATUS]</span>
              <span class="text-green-400">ONLINE</span>
            </div>
          </div>

          <!-- Music Player Terminal Style -->
          <div class="mb-6">
            <div class="text-slate-500 dark:text-green-600 text-sm mb-2">$ music --now-playing</div>
            <div class="bg-slate-800/50 dark:bg-green-950/10 border border-slate-700 dark:border-green-500/20 rounded p-4">
              <div class="flex items-center gap-4 mb-3">
                <div class="w-16 h-16 bg-slate-700 dark:bg-green-900/20 rounded border border-slate-600 dark:border-green-500/30 overflow-hidden">
                  <img 
                    src="./src/assets/tools/cytus.svg" 
                    alt="Album Art" 
                    class="w-full h-full object-cover opacity-80"
                  />
                </div>
                <div class="flex-1 text-xs space-y-1">
                  <div class="text-slate-400 dark:text-green-400">♪ Now Playing:</div>
                  <div class="text-white dark:text-green-100">我依旧真诚待人</div>
                  <div class="text-slate-500 dark:text-green-500">NetEase Music</div>
                </div>
              </div>
              <iframe
                frameborder="no"
                border="0"
                marginwidth="0"
                marginheight="0"
                width="100%"
                height="66"
                src="//music.163.com/outchain/player?type=2&id=2063002925&auto=0&height=66"
                class="opacity-80"
              ></iframe>
            </div>
          </div>

          <!-- Terminal Quote -->
          <div class="border-l-2 border-green-500 dark:border-cyan-400 pl-4 mb-4">
            <div class="text-white dark:text-green-100 text-lg mb-2">能与小伙伴创造，交流，分享，某荣幸至极</div>
            <div class="text-slate-400 dark:text-green-400 text-sm">风带来了种子，时间使其发芽</div>
          </div>
          
          <div class="flex items-center gap-2 text-sm">
            <span class="text-slate-500 dark:text-green-600">$</span>
            <span class="text-white dark:text-green-100">ls -la friends/</span>
            <span class="animate-pulse">_</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Friends Section -->
    <section id="friends" class="mb-16 space-y-12">
      
      <!-- Friends -->
      <div>
        <div class="flex items-center gap-3 mb-4">
          <span class="text-green-500 dark:text-cyan-400 text-xl">></span>
          <h2 class="text-2xl font-bold text-slate-900 dark:text-green-100">./friends</h2>
          <div class="flex-1 h-px bg-slate-300 dark:bg-green-500/30"></div>
          <span class="text-slate-500 dark:text-green-600 text-sm">{friends[0].length} entries</span>
        </div>
        
        <!-- Description -->
        <div class="mb-6 text-sm font-mono">
          <div class="text-slate-600 dark:text-green-600 mb-2"># Description:</div>
          <div class="text-slate-700 dark:text-slate-300 pl-2 border-l-2 border-slate-300 dark:border-green-500/30">
            A curated collection of inspiring websites from talented individuals I have the privilege to know
          </div>
        </div>
        
        <div class="bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-green-500/20 rounded-lg p-6">
          <FriendList list={friends[0]} />
        </div>
      </div>

      <!-- Special Links -->
      <div>
        <div class="flex items-center gap-3 mb-4">
          <span class="text-yellow-500 dark:text-cyan-400 text-xl">></span>
          <h2 class="text-2xl font-bold text-slate-900 dark:text-green-100">./special</h2>
          <div class="flex-1 h-px bg-slate-300 dark:bg-green-500/30"></div>
          <span class="text-slate-500 dark:text-green-600 text-sm">{friends[2].length} entries</span>
        </div>
        
        <!-- Description -->
        <div class="mb-6 text-sm font-mono">
          <div class="text-slate-600 dark:text-green-600 mb-2"># Description:</div>
          <div class="text-slate-700 dark:text-slate-300 pl-2 border-l-2 border-slate-300 dark:border-green-500/30">
            Unique communities and resources that deserve special recognition
          </div>
        </div>
        
        <div class="bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-green-500/20 rounded-lg p-6">
          <FriendList list={friends[2]} />
        </div>
      </div>
      
    </section>

    <!-- How to Apply Section -->
    <section id="how-to-apply" class="mb-16">
      <div class="flex items-center gap-3 mb-6">
        <span class="text-blue-500 dark:text-cyan-400 text-xl">></span>
        <h2 class="text-2xl font-bold text-slate-900 dark:text-green-100">./apply.sh</h2>
        <div class="flex-1 h-px bg-slate-300 dark:bg-green-500/30"></div>
        <span class="text-slate-500 dark:text-green-600 text-sm">executable</span>
      </div>

      <div class="space-y-6">
        
        <!-- Site Info -->
        <div class="bg-slate-900 dark:bg-black border border-slate-700 dark:border-green-500/30 rounded-lg overflow-hidden">
          <div class="bg-slate-800 dark:bg-green-950/20 px-4 py-2 border-b border-slate-700 dark:border-green-500/30">
            <span class="text-slate-400 dark:text-green-400 text-sm">config.json</span>
          </div>
          <div class="p-4 text-sm">
            <div class="text-slate-500 dark:text-green-600 mb-3"># Site Configuration</div>
            <div class="space-y-2">
              {
                linksConf.applyTip.map(({ name, val }) => {
                  const script = `navigator.clipboard.writeText('${val}');document.dispatchEvent(new CustomEvent('toast',{detail:{message:'Copied "${val}" to clipboard!'}}))`
                  return (
                    <div class="group flex items-center justify-between hover:bg-slate-800/50 dark:hover:bg-green-950/10 px-2 py-1 rounded">
                      <span class="text-blue-400 dark:text-cyan-300">"{name.toLowerCase()}":</span>
                      <div class="flex items-center gap-2">
                        <samp 
                          class="text-green-400 dark:text-green-300 cursor-pointer hover:text-green-300 dark:hover:text-green-200 transition-colors max-w-64 truncate" 
                          onclick={script}
                          title={`"${val}"`}
                        >
                          "{val}"
                        </samp>
                        <button 
                          onclick={script}
                          class="opacity-0 group-hover:opacity-100 text-slate-400 hover:text-white dark:text-green-500 dark:hover:text-green-300 transition-all"
                          title="Copy"
                        >
                          <Icon name="copy" class="w-3 h-3" />
                        </button>
                      </div>
                    </div>
                  )
                })
              }
            </div>
            <div class="mt-4 text-slate-600 dark:text-green-600 text-xs"># Click any value to copy</div>
          </div>
        </div>

        <!-- Requirements -->
        <div class="bg-slate-900 dark:bg-black border border-slate-700 dark:border-green-500/30 rounded-lg overflow-hidden">
          <div class="bg-slate-800 dark:bg-green-950/20 px-4 py-2 border-b border-slate-700 dark:border-green-500/30">
            <span class="text-slate-400 dark:text-green-400 text-sm">requirements.txt</span>
          </div>
          <div class="p-4 text-sm space-y-3">
            <div class="flex items-start gap-3">
              <span class="text-green-500 dark:text-cyan-400 font-bold">1.</span>
              <div>
                <div class="text-white dark:text-green-100">Add my site first</div>
                <div class="text-slate-400 dark:text-green-400 text-xs mt-1"># Mutual linking required</div>
              </div>
            </div>
            <div class="flex items-start gap-3">
              <span class="text-yellow-500 dark:text-cyan-400 font-bold">2.</span>
              <div>
                <div class="text-white dark:text-green-100">Keep site active</div>
                <div class="text-slate-400 dark:text-green-400 text-xs mt-1"># Original content only</div>
              </div>
            </div>
            <div class="flex items-start gap-3">
              <span class="text-blue-500 dark:text-cyan-400 font-bold">3.</span>
              <div>
                <div class="text-white dark:text-green-100">Contact methods:</div>
                <div class="text-slate-400 dark:text-green-400 text-xs mt-1 space-y-1">
                  <div># Comment below OR</div>
                  <div class="flex items-center gap-2">
                    <span>#</span>
                    <a href="https://github.com/cworld1/astro-theme-pure/blob/main/public/links.json" target="_blank" class="text-blue-400 dark:text-cyan-300 hover:underline">
                      Submit PR
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        
      </div>
    </section>
    
    <!-- Archives Section -->
    <section id="archives" class="mb-16">
      <div class="flex items-center gap-3 mb-6">
        <span class="text-slate-600 dark:text-green-500 text-xl">></span>
        <h2 class="text-2xl font-bold text-slate-900 dark:text-green-100">./archives</h2>
        <div class="flex-1 h-px bg-slate-300 dark:bg-green-500/30"></div>
        <span class="text-slate-500 dark:text-green-600 text-sm">historical data</span>
      </div>
      
      <div class="space-y-4 max-w-4xl">
        <div class="bg-slate-100 dark:bg-slate-900 border border-slate-300 dark:border-slate-700 rounded-lg overflow-hidden">
          <Collapse title='[INACTIVE] Archived Links' class="bg-slate-50 dark:bg-slate-800 hover:bg-slate-100 dark:hover:bg-slate-750 text-slate-700 dark:text-slate-300 transition-colors">
            <div class="p-4 bg-slate-50 dark:bg-slate-800">
              <div class="text-slate-600 dark:text-green-600 text-sm font-mono mb-4"># Inactive or rule-breaking friends</div>
              <FriendList list={friends[1]} />
            </div>
          </Collapse>
        </div>
        
        <div class="bg-slate-100 dark:bg-slate-900 border border-slate-300 dark:border-slate-700 rounded-lg overflow-hidden">
          <Collapse title='[LOG] Connection History' class="bg-slate-50 dark:bg-slate-800 hover:bg-slate-100 dark:hover:bg-slate-750 text-slate-700 dark:text-slate-300 transition-colors">
            <div class="p-4 bg-slate-50 dark:bg-slate-800">
              <div class="text-slate-600 dark:text-green-600 text-sm font-mono mb-4"># Git log --oneline friends/</div>
              <Timeline events={linksConf.logbook} />
            </div>
          </Collapse>
        </div>
      </div>
    </section>

    <!-- Comments Section -->
    <section class="mb-16">
      <div class="flex items-center gap-3 mb-6">
        <span class="text-purple-500 dark:text-cyan-400 text-xl">></span>
        <h2 class="text-2xl font-bold text-slate-900 dark:text-green-100">./comments.log</h2>
        <div class="flex-1 h-px bg-slate-300 dark:bg-green-500/30"></div>
        <span class="text-slate-500 dark:text-green-600 text-sm">append mode</span>
      </div>
      
      <div class="bg-slate-50 dark:bg-slate-900/30 border border-slate-200 dark:border-green-500/20 rounded-lg p-6">
        <div class="text-slate-600 dark:text-green-600 text-sm font-mono mb-4"># Leave your message below</div>
        <Comment />
      </div>
    </section>

  </div>
</PageLayout>

<style>
  /* Terminal cursor animation */
  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }
  
  .animate-pulse {
    animation: blink 1s infinite;
  }
  
  /* Monospace font for all text */
  .font-mono {
    font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', 'Source Code Pro', monospace;
  }
  
  /* Custom selection color for hacker feel */
  ::selection {
    background-color: rgba(34, 197, 94, 0.3);
    color: rgb(220, 252, 231);
  }
  
  /* Dark mode adjustments */
  .dark ::selection {
    background-color: rgba(6, 182, 212, 0.3);
    color: rgb(165, 243, 252);
  }
</style>